<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

  <LinearLayout
      android:id="@+id/values"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:background="#242424"
      android:layout_alignParentBottom="true"
      tools:ignore="InvalidId">
      
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/km"
              android:layout_width="220dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:paddingVertical="15dp"
              android:text="00"
              android:textColor="#FFFFFF"
              android:textSize="10sp"
              android:textStyle="bold" />

          <TextView
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="#6e6e6e"/>
          
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="kilometer"
              android:textSize="18dp"
              android:paddingVertical="15dp"/>
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#6e6e6e"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/m"
              android:layout_width="220dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="00"
              android:textSize="10sp"
              android:paddingVertical="15dp"/>
          <TextView
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="#6e6e6e"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="Meter"
              android:textSize="18dp"
              android:paddingVertical="15dp"/>
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#6e6e6e"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:id="@+id/cm"
              android:layout_width="220dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:paddingVertical="15dp"
              android:text="00"
              android:textColor="#FFFFFF"
              android:textSize="10sp"
              android:textStyle="bold"
              tools:ignore="InvalidId" />

          <TextView
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="#6e6e6e" />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:paddingVertical="15dp"
              android:text="Centimeter"
              android:textColor="#FFFFFF"
              android:textSize="18dp"
              android:textStyle="bold" />
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#6e6e6e"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/mm"
              android:layout_width="220dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="00"
              android:textSize="10sp"
              android:paddingVertical="15dp"/>
          <TextView
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="#6e6e6e"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:paddingVertical="15dp"
              android:text="Millimeter"
              android:textColor="#FFFFFF"
              android:textSize="18dp"
              android:textStyle="bold" />
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#6e6e6e"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/micron"
              android:layout_width="220dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="00"
              android:textSize="10sp"
              android:paddingVertical="15dp"/>
          <TextView
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="#6e6e6e"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="Micrometer"
              android:textSize="18dp"
              android:paddingVertical="15dp"/>
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#6e6e6e"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/nm"
              android:layout_width="220dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="00"
              android:textSize="10sp"
              android:paddingVertical="15dp"/>
          <TextView
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="#6e6e6e"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="Nanometer"
              android:textSize="18dp"
              android:paddingVertical="15dp"/>
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#6e6e6e"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/mile"
              android:layout_width="220dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="00"
              android:textSize="10sp"
              android:paddingVertical="15dp"
              tools:ignore="DuplicateIds" />
          <TextView
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="#6e6e6e"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="Mile"
              android:textSize="18dp"
              android:paddingVertical="15dp"/>
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#6e6e6e"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/yard"
              android:layout_width="220dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="00"
              android:textSize="10sp"
              android:paddingVertical="15dp"/>


          <TextView
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="#6e6e6e"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="yard"
              android:textSize="18dp"
              android:paddingVertical="15dp"/>
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#6e6e6e"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/foot"
              android:layout_width="220dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="00"
              android:textSize="10sp"
              android:paddingVertical="15dp"/>
          <TextView
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="#6e6e6e"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="foot"
              android:textSize="18dp"
              android:paddingVertical="15dp"/>
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#6e6e6e"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/inch"
              android:layout_width="220dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="00"
              android:textSize="10sp"
              android:paddingVertical="15dp"/>
          <TextView
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="#6e6e6e"/>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFFFFF"
              android:text="Inch"
              android:textSize="18dp"
              android:paddingVertical="15dp"/>
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="20dp"
          android:background="@color/black"/>

  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_above="@+id/values"
        android:gravity="center"
        android:paddingVertical="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:gravity="center">

            <EditText
                android:id="@+id/input"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:gravity="center"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:inputType="numberDecimal"
                android:hint="input"
                android:layout_marginRight="10dp" />

            <Spinner
                android:id="@+id/unit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:background="@drawable/background"/>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>